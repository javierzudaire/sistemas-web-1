<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
        <param-value>server</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.CONFIG_FILES</param-name>
        <param-value>/WEB-INF/faces-config.xml</param-value>
    </context-param>
    <listener>
        <listener-class>com.sun.faces.config.ConfigureListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>InicioServlet</servlet-name>
        <servlet-class>servlets.InicioServlet</servlet-class>
        <init-param>
            <param-name>video</param-name>
            <param-value>https://www.youtube-nocookie.com/embed/YpFk5yNcbGQ?controls=0&amp;start=12&amp;showinfo=0</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>TiendaServlet</servlet-name>
        <servlet-class>servlets.TiendaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReservaServlet</servlet-name>
        <servlet-class>servlets.ReservaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CarroServlet</servlet-name>
        <servlet-class>servlets.CarroServlet</servlet-class>
    </servlet>
    <filter>
      <filter-name>ControlAccesoServlet</filter-name>
      <filter-class>servlets.ControlAccesoServlet</filter-class>
    </filter>
    <servlet>
        <servlet-name>CheckReservas</servlet-name>
        <servlet-class>servlets.CheckReservas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUsuario</servlet-name>
        <servlet-class>servlets.AddUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProducto</servlet-name>
        <servlet-class>servlets.AddProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HorasDisponibles</servlet-name>
        <servlet-class>servlets.HorasDisponibles</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReservaHoras</servlet-name>
        <servlet-class>servlets.ReservaHoras</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InicioServlet</servlet-name>
        <url-pattern>/InicioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TiendaServlet</servlet-name>
        <url-pattern>/TiendaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReservaServlet</servlet-name>
        <url-pattern>/ReservaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarroServlet</servlet-name>
        <url-pattern>/CarroServlet</url-pattern>
    </servlet-mapping>
    <filter-mapping>
      <filter-name>ControlAccesoServlet</filter-name>
      <url-pattern>/ControlAccesoServlet</url-pattern>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>AddUsuario</servlet-name>
        <url-pattern>/AddUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckReservas</servlet-name>
        <url-pattern>/CheckReservas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProducto</servlet-name>
        <url-pattern>/AddProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HorasDisponibles</servlet-name>
        <url-pattern>/HorasDisponibles</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReservaHoras</servlet-name>
        <url-pattern>/ReservaHoras</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/404.xhtml</location>
    </error-page>
        <error-page>
        <location>/error.xhtml</location>
    </error-page>

    <resource-ref> 
        <res-ref-name>tenisceu</res-ref-name> 
        <res-type>javax.sql.DataSource</res-type> 
        <res-auth>Container</res-auth> 
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <listener>
        <listener-class>servlets.RequestListener</listener-class>
    </listener>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>